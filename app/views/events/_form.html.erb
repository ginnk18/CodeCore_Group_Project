<%=simple_form_for @event do |f|%>
<%= f.input :name, label: 'Name of Event'%>

<div class="row">
  <div class="col-4">
    <%= f.label :date %><p>
      <!-- Goto date.js for changing defaults  -->
      <%= f.text_field :date, "data-provide" => 'datepicker'%>

    </div>
    <div class="col-4">
      <%= f.input :start_time, label: 'Start Time:', ampm: true%>
    </div>
    <div class="col-4">
      <%= f.input :end_time, label: 'End Time',ampm: true%>
    </div>
  </div>
  <div class="row">
<div class="col-6">
  <%= f.input :location, label: 'Location (Address)'%>
  <%= f.input :additional_info, label: 'Additional Information'%>
  <%= f.input :attachment_url, label: 'Attachment URL'%>
  <%= f.label :lead_id %><p>
  <%= f.select :lead_id, @lead_users.map { |leader| [leader.full_name, leader.id] } %>
  <%= f.label :shift_manager_id %><p>
  <%= f.select :shift_manager_id, @shift_manager_users.map { |manager| [manager.full_name, manager.id] } %>
</div>
<div class="col-6">
  <h4 class="head">Targets</h4>
  <%= f.input :sign_up_goals, label: 'Sign Up Goals'%>
  <%= f.input :show_up_goals, label: 'Show Up Goals'%>
  <%= f.input :signature_goals, label: 'Signature Goals'%>
  <%= f.input :sign_up_outcome, label: 'Sign Up Outcome', placeholder: 'Fill in after event' %>
  <%= f.input :show_up_outcome, label: 'Show Up Outcome', placeholder: 'Fill in after event' %>
  <%= f.input :signature_outcome, label: 'Signatures Outcome', placeholder: 'Fill in after event' %>

</div>
</div>
  <div class="row">

      <!-- Selecting an canvas captain -->

      <div class="col-3">
        <%= f.label :canvas_captain_id %><p>
        <%= f.select :canvas_captain_id, @canvas_captain_users.map { |canvas_captain| [canvas_captain.full_name, canvas_captain.id] } %>
      </div>

      <!-- Selecting an data captain -->
      <div class="col-3">
        <%= f.label :data_captain_id %><p>
          <%= f.select :data_captain_id, @data_captain_users.map { |data_captain| [data_captain.full_name, data_captain.id] } %>
        </div>

      <!-- Selecting the type of event -->

      <div class="col-3">
        <%= f.label :event_category_id %><p>
          <%= f.select :event_category_id, @event_categories.map { |category| [category.name, category.id] } %>
        </div>

        <!-- Selecting a team that this event belongs to  -->
        <div class="col-3">
          <%= f.label :team_id %><p>
            <%= f.select :team_id, @teams.map { |team| [team.name, team.id] } %>
        </div>

  </div>

        <%= f.submit class:"btn btn-primary"%>
        <% end %>
