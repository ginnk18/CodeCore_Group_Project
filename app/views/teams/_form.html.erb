

<%= simple_form_for @team do |f| %>
<%= f.input :name, label: 'Team Name'%>
<%= f.label :team_lead_id %>
<%= f.select :team_lead_id, @lead_users.map { |leader| [leader.full_name, leader.id] } %>
<%= f.label :team_category_id %>
<%= f.select :team_category_id, @team_categories.map { |category| [category.name, category.id] } %>
<%= f.association :members, collection: @users, :include_blank => true, input_html:  { class: 'chosen-select'} ,  :label_method => lambda { |user| "#{user.first_name} #{user.last_name}"  }%>

<%= f.submit "Create New Team", class:"btn btn-primary" %>
 <% end %>